</body>

<table>
  <thead>
    <tr>
      <th>Post</th>
      <th>Score</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.title, post %></td>
        <td><%= post.score %></td>
        <% if post.user_id == @current_user._id %>
          <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end%>
      </tr>
    <% end %>
  </tbody>
</table>

