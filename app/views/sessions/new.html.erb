<%= form_for :session, :url => login_path, :method => :post do |f| %>

  <div class='field'>
    <%= label_tag :email %><br>
    <%= text_field_tag :email, params[:email] %>
  </div>
  <div class='field'>
    <%= label_tag :password %><br>
    <%= password_field_tag :password %>
  </div>
  <div class="actions">
    <br>
    <%= f.submit "Log in" %>
  </div>
  <%= link_to 'Home', root_path %>
<% end %>